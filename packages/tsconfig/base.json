{
    "$schema": "https://json.schemastore.org/jsconfig",
    "compilerOptions": {
        "strict": true,
        "moduleResolution": "node",
        "target": "ES2022",
        "lib": ["ES2020", "DOM"],
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noUncheckedIndexedAccess": true,
        "useUnknownInCatchVariables": true
    },
    "exclude": ["**/node/modules"]
}
